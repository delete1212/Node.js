<script type="module">
  import { createDeck, drawCard, selectCard } from './card.js';
  let Hcount=0, Dcount=0, Scount=0, Ccount=0
  let Hpoint=0, Dpoint=0, Spoint=0, Cpoint=0
  let PointCard = {}
  let HA, DA, SA, CA

  function startCard(){
    createDeck()
    HA = selectCard("♥", "A")
    HA = `<div class="card ♥">
                    <span class="red">${HA.suit}</span>
                    <span>${HA.value}</span>
                    </div>`
    document.querySelector('[data-index="0"]').insertAdjacentHTML('beforeend', HA)
    DA = selectCard("♦", "A")
    DA = `<div class="card ♦">
                    <span class="red">${DA.suit}</span>
                    <span>${DA.value}</span>
                    </div>`
    document.querySelector('[data-index="0"]').insertAdjacentHTML('beforeend', DA)
    SA = selectCard("♠", "A")
    SA =`<div class="card ♠">
                    <span>${SA.suit}</span>
                    <span>${SA.value}</span>
                    </div>`
    document.querySelector('[data-index="0"]').insertAdjacentHTML('beforeend', SA)
    CA = selectCard("♣", "A")
    CA = `<div class="card ♣">
                    <span>${CA.suit}</span>
                    <span>${CA.value}</span>
                    </div>`
    document.querySelector('[data-index="0"]').insertAdjacentHTML('beforeend', CA)

    Hcount = 0
    Dcount = 0
    Scount = 0
    Ccount = 0
    PointCard = {}

    for(let i = 0; i < 7; i++){
      PointCard[i] = drawCard()
      switch(PointCard[i].suit) {
        case "♥": Hcount++;
          break;
        case "♦": Dcount++;
          break;
        case "♠": Scount++;
          break;
        case "♣": Ccount++;
          break;
      }
      if(Hcount >= 5 || Dcount >= 5 || Scount >= 5 || Ccount >= 5){
        document.querySelectorAll('.horsebox').forEach(element => {element.innerHTML = ''})
        startCard()
      }
    }
    console.log(PointCard[0])
      for(let i =0; i < 7; i++){
      let Course = `<div class="card">
                      <span>${PointCard[i].suit}</span>
                      <span>${PointCard[i].value}</span>
                      </div>`
      document.querySelector(`[data-index="${i+1}"]`).insertAdjacentHTML('beforeend', Course)
    }
    Hpoint=0, Dpoint=0, Spoint=0, Cpoint=0
  }
  startCard()


  function raceCard(){
      let raceSuit = drawCard().suit
      console.log(raceSuit)
      switch(raceSuit) {
        case "♥":
          document.querySelectorAll('.card.♥').forEach(element => {
          element.remove()
          })
          Hpoint++
          document.querySelector(`.${Hpoint}`).insertAdjacentHTML('beforeend', HA)
          break;
        case "♦":
          document.querySelectorAll('.card.♦').forEach(element => {
          element.remove()
          })
          Dpoint++
          document.querySelector(`.${Dpoint}`).insertAdjacentHTML('beforeend', DA)
          break;
        case "♠":
          document.querySelectorAll('.card.♠').forEach(element => {
          element.remove()
          })
          Spoint++
          document.querySelector(`.${Spoint}`).insertAdjacentHTML('beforeend', SA)
          break;
        case "♣":
          document.querySelectorAll('.card.♣').forEach(element => {
          element.remove()
          })
          Cpoint++
          document.querySelector(`.${Cpoint}`).insertAdjacentHTML('beforeend', CA)
          break;
      }
  }
  raceCard()

  
</script>
